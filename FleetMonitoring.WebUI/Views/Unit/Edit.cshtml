@model FleetMonitoring.WebUI.Models.UnitModel
@{
    ViewBag.Title = "Edit";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Edit Unit form
                <div class="float-right">
                    @Html.ActionLink("Back", "Index", "Unit", null, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>

            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "input-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Identity)
                        @Html.TextBoxFor(model => model.Identity, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Identity, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OwnerId)
                        @Html.DropDownListFor(model => model.OwnerId, new SelectList(ViewBag.Owners, "OwnerId", "Name"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OwnerId, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn-submit btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</div>
